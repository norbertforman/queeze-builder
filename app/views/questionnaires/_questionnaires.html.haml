- @questionnaires.each do |questionnaire|
  .panel.panel-default
    .panel-heading
      %h3.panel-title= questionnaire.title
    .panel-body
      .settings
        = link_to "Edit", edit_questionnaire_path(questionnaire), class: "btn btn-info btn-xs"
        -# = link_to "Answers", question_answers_path(question), class: "btn btn-primary btn-xs"
        = link_to "Delete", questionnaire_path(questionnaire), method: :delete, confirm: "Are you sure?", class: "btn btn-danger btn-xs pull-right"
